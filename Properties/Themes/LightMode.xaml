<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Background" Color="{DynamicResource LightColor}" />
    <SolidColorBrush x:Key="Foreground" Color="{DynamicResource DarkColor}" />
    <SolidColorBrush x:Key="BackgroundStrong" Color="{DynamicResource White}" />
    <SolidColorBrush x:Key="ForegroundStrong" Color="{DynamicResource Black}" />
</ResourceDictionary>