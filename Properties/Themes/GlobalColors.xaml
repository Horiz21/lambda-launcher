<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--黑白-->
    <Color x:Key="Black">#000</Color>
    <Color x:Key="White">#FFF</Color>

    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />

    <!--常用灰度-->
    <Color x:Key="GrayLightColor">#D0D0D0</Color>
    <Color x:Key="GrayColor">#A9A9A9</Color>
    <Color x:Key="GrayDarkColor">#818181</Color>

    <SolidColorBrush x:Key="GrayLightColorBrush" Color="{StaticResource GrayLightColor}" />
    <SolidColorBrush x:Key="GrayColorBrush" Color="{StaticResource GrayColor}" />
    <SolidColorBrush x:Key="GrayDarkColorBrush" Color="{StaticResource GrayDarkColor}" />
</ResourceDictionary>