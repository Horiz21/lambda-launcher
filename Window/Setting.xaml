<Window x:Class="LambdaLauncher.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LambdaLauncher"
        mc:Ignorable="d"
        Title="Setting" Height="290" Width="384"
        Style="{DynamicResource WindowNormal}">
    <Grid>
        <!--用于实现页面拖拽的顶栏-->
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="47"
              Margin="2.5" MouseLeftButtonDown="DragWindow"
              Background="{DynamicResource LightColorBrush}"/>
        <!--用于存放可显示页面元素的两行Grid-->
        <Grid Margin="20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--标题和关闭按钮（操作区域）-->
            <Grid x:Name="gridPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="14*"/>
                    <ColumnDefinition Width="29*"/>
                </Grid.ColumnDefinitions>
                <Label Content="{DynamicResource Settings}"
                   FontSize="16"
                   FontFamily="Noto Sans SC Black"
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="{DynamicResource DarkColorBrush}"/>
                <Button Content="×" Height="24" Width="24"
                    HorizontalAlignment="Left" Margin="204,4,0,4"
                    FontSize="24" FontFamily="Noto Sans SC Black"
                    Background="Transparent"
                    Style="{DynamicResource ButtonCancel}"
                    Click="CloseWindow" Grid.Column="1"/>
            </Grid>

            <!--第二行为显示和编辑区域-->
            <Grid Grid.Row="1">
                <Grid x:Name="gridInteractiveKey"/>
                <Grid x:Name="gridInput">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="36"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="96"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--语言设定-->
                    <Label Content="{DynamicResource Language}" Grid.Row="0" Grid.Column="0"
                       FontFamily="Noto Sans SC" Padding="0" FontSize="14"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <ComboBox x:Name="boxLanguage"
                              Grid.Row="0" Grid.Column="1" Style="{DynamicResource ComboBoxNormal}"
                              SelectionChanged="TempChangeLanguage">
                        <ComboBoxItem IsSelected="True">中文(中国)</ComboBoxItem>
                        <ComboBoxItem>English</ComboBoxItem>
                    </ComboBox>

                    <!--主题设定-->
                    <Label Content="{DynamicResource Theme}" Grid.Row="1" Grid.Column="0"
                       FontFamily="Noto Sans SC" Padding="0" FontSize="14"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Style="{DynamicResource ComboBoxNormal}">
                        <ComboBoxItem IsSelected="True" Content="{DynamicResource ThemeBamboo}"/>
                        <ComboBoxItem Content="{DynamicResource ThemeCyberpunk}"/>
                    </ComboBox>

                    <!--夜间模式设定-->
                    <Label Content="{DynamicResource DarkMode}" Grid.Row="2" Grid.Column="0"
                       FontFamily="Noto Sans SC" Padding="0" FontSize="14"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton Grid.Column="0" Style="{DynamicResource RadioButtonNormal}" GroupName="DarkMode" Content="{DynamicResource DarkModeOn}"/>
                        <RadioButton Grid.Column="1" Style="{DynamicResource RadioButtonNormal}" GroupName="DarkMode" Content="{DynamicResource DarkModeOff}"/>
                    </Grid>

                    <!--键盘模式设定-->
                    <Label Content="{DynamicResource KeyboardDouble}" Grid.Row="3" Grid.Column="0"
                       FontFamily="Noto Sans SC" Padding="0" FontSize="14"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton Grid.Column="0" Style="{DynamicResource RadioButtonNormal}" GroupName="KeyboardDouble" Content="{DynamicResource KeyboardDoubleOn}"/>
                        <RadioButton Grid.Column="1" Style="{DynamicResource RadioButtonNormal}" GroupName="KeyboardDouble" Content="{DynamicResource KeyboardDoubleOff}"/>
                    </Grid>

                    <!--鼠标模式设定-->
                    <Label Content="{DynamicResource MouseDouble}" Grid.Row="4" Grid.Column="0"
                       FontFamily="Noto Sans SC" Padding="0" FontSize="14"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton Grid.Column="0" Style="{DynamicResource RadioButtonNormal}" GroupName="MouseDouble" Content="{DynamicResource MouseDoubleOn}"/>
                        <RadioButton Grid.Column="1" Style="{DynamicResource RadioButtonNormal}" GroupName="MouseDouble" Content="{DynamicResource MouseDoubleOff}"/>
                    </Grid>

                    <!--Lambda功能设定-->
                    <Label Content="{DynamicResource LambdaFunction}" Grid.Row="5" Grid.Column="0"
                       FontFamily="Noto Sans SC" Padding="0" FontSize="14"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" Style="{DynamicResource ComboBoxNormal}">
                        <ComboBoxItem Content="{DynamicResource LambdaFunction1}"/>
                        <ComboBoxItem Content="{DynamicResource LambdaFunction2}"/>
                        <ComboBoxItem Content="{DynamicResource LambdaFunction3}"/>
                        <ComboBoxItem Content="{DynamicResource LambdaFunction4}"/>
                        <ComboBoxItem Content="{DynamicResource LambdaFunction5}"/>
                    </ComboBox>

                    <!--Row=3为确认键和取消键的Grid-->
                    <Grid Grid.Row="6" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--第一个是取消键-->
                        <Button x:Name="buttonCancel" Content="{DynamicResource Cancle}" FontSize="14"
                                 Style="{DynamicResource ButtonNormal}" Width="80" Height="24"/>
                        <!--第二个是确认键-->
                        <Button x:Name="buttonConfirm" Content="{DynamicResource Confirm}" FontSize="14"
                                Style="{DynamicResource ButtonConfirm}" Width="80" Height="24" Grid.Column="1"
                                Click="ChangeLanguage"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
