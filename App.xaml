<Application x:Class="LambdaLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Component/ThemeDisplayer.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/Themes/GlobalColors.xaml"/>
                <ResourceDictionary Source="/Resource/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Resource/Styles/Windows.xaml"/>
                <ResourceDictionary Source="/Resource/Styles/Borders.xaml"/>
                <ResourceDictionary x:Name="CurrentTheme" Source="/Resource/Themes/ThemeSpring.xaml"/>
                <ResourceDictionary x:Name="CurrentLanguage" Source="/Language/zh_cn.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
